{% extends "base.twig" %}

{% block body %}
	
	<style>
		section {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;
			height: 100vh;
			font-family: sans-serif;
			color: #333;
		}
		
		h1 {
			font-size: 100px;
			font-weight: 900;
			line-height: 1;
			margin: 0 0 20px;
		}
		
		h2 {
			font-size: 30px;
			line-height: 1;
			margin: 0 0 30px;
			color: #666;
		}
		
		a {
			display: inline-block;
			font-size: 18px;
			color: #fff;
			background: #333;
			padding: 0.75em 1em;
			text-transform: uppercase;
			text-decoration: none;
			font-weight: 300;
		}
		
		a:hover,
		a:focus {
			background: #000;
		}
